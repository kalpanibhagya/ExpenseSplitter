
<h3>Manage Friends</h3>

<%= link_to 'Back', root_path, :class => "btn btn-default btn-sm"%>

<h3>Friends</h3>
<% @logged_user.friendships.each do |friendship| %>
  <%= friendship.friend.email %>
  <%= link_to "Remove", friendship, :method => :delete, :class => "btn btn-danger btn-xs" %>
  <br/>
  <br/>
<% end %>

<h3>Add new friends</h3>
<% @new_friends.each do |user| %>
  <%= user.email %>
  <%= link_to "Add", friendships_path(:friend_id => user), :method => :post , :class => "btn btn-success btn-xs"  %>
  <br/>
  <br/>
<% end %>


